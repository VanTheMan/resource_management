<ul class="breadcrumb">
  <li><a href="<%= root_path %>">Home</a> <span class="divider">/</span></li>
  <li class="active">Items</li>
</ul>

<h1>All Items</h1>

<hr>

<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
<span class="search-items">
  <input type="text" placeholder="search items..." id="search_item" style="float:right">
</span>

<br />
<br />

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Borrowers</th>
      <th>Quantity</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each_with_index do |item, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to item.name,item_path(item) %></td>
        <td><%= item.item_type %></td>
        <td><%= image_tag(item.item_image.url) %></td>
        <td><%= item.description %></td>
        <td><%= item.try(:borrower) ? item.borrower.name : "" %></td>
        <td><%= item.quantity %></td>
        <td><%= item.status %></td>
        <td>
          <%= link_to "Order", "#", class: "order" %>
          <%= render 'orders/new', item: item %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>