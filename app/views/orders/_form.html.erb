<%= simple_form_for(Order.new, :url => orders_path, :html => { :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date, readonly: true, input_html: { class: "datepicker" } %>
    <%= f.input :end_date, readonly: true, input_html: { class: "datepicker" } %>
    <%= f.input :reason, as: :text , input_html: { rows: 3 } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>